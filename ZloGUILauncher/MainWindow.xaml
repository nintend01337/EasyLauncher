<Controls:MetroWindow x:Class="ZloGUILauncher.MainWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                      xmlns:local="clr-namespace:ZloGUILauncher"
                      xmlns:views="clr-namespace:ZloGUILauncher.Views"
                      xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
                      xmlns:helpers="clr-namespace:ZloGUILauncher"
                      Height="600" Width="1000" ResizeMode="CanMinimize" ShowSystemMenuOnRightClick="false"
                      GlowBrush="{DynamicResource AccentColorBrush}" ShowTitleBar="True" ShowIconOnTitleBar="true" Icon="icon.ico"
                      WindowStartupLocation="CenterScreen">
    <Control.Background>
        <ImageBrush ImageSource="{StaticResource background}" Stretch="UniformToFill"/>
    </Control.Background>
    <FrameworkElement.Resources>
        <Style TargetType="{x:Type ScrollViewer}">
            <Style.Setters>
                <Setter Property="helpers:ScrollViewerCorrector.FixScrolling" Value="true"/>
            </Style.Setters>
        </Style>
        <Style TargetType="{x:Type Button}" BasedOn="{StaticResource MetroButton}">
            <Style.Setters>
                <Setter Property="Control.Background" Value="LightGray"/>
                <Setter Property="Control.Foreground" Value="Black"/>
            </Style.Setters>
        </Style>
    </FrameworkElement.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Margin="0" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center"
                  Orientation="Vertical">
                <StackPanel Margin="0" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <TextBlock Text="ZClient State : "/>
                    <TextBlock x:Name="IsConnectedTextBlock" Text="DisConnected" Foreground="Red"/>
                </StackPanel>
                <StackPanel Margin="5" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center"
                    Orientation="Horizontal">
                    <TextBlock Text="Player : "/>
                    <TextBlock x:Name="PlayerInfoTextBlock" Text="name [id]" Foreground="LimeGreen"/>
                </StackPanel>
            </StackPanel>
        </Grid>
        <Controls:MetroAnimatedTabControl SelectionChanged="MainTabControl_SelectionChanged" x:Name="MainTabControl" Grid.Row="1"
                                      TabStripPlacement="Top" Controls:TabControlHelper.IsUnderlined="true">
            <TabItem Header="Battlefield 3" IsEnabled="true">
                <Grid>
                    <views:BF3View/>
                </Grid>
            </TabItem>
            <TabItem Header="Battlefield 4">
                <Grid>
                    <views:BF4View x:Name="Ibf4View"/>
                </Grid>
            </TabItem>
            <TabItem Header="Battlefield:Hardline">
                <Grid>
                    <views:BFHView x:Name="IbfhView"/>
                </Grid>
            </TabItem>
            <TabItem Header="Опции">
                <Grid>
                    <views:Options/>
                </Grid>
            </TabItem>
            <TabItem Header="Log">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <RichTextBox x:Name="LogBox" VerticalScrollBarVisibility="Visible" BorderThickness="0" Background="#FF0D0D0D"
                       IsReadOnly="true" Grid.ColumnSpan="2">
                        <FrameworkElement.Resources>
                            <Style TargetType="{x:Type Paragraph}">
                                <Setter Property="Block.Margin" Value="0"/>
                            </Style>
                        </FrameworkElement.Resources>
                        <RichTextBox.Document>
                            <FlowDocument x:Name="LogDocument"/>
                        </RichTextBox.Document>
                    </RichTextBox>
                    <Button Click="ClearButton_Click" Grid.Row="1" Content="Очистить"/>
                </Grid>
            </TabItem>
        </Controls:MetroAnimatedTabControl>
        <StatusBar Grid.Row="2">
            <TextBlock VerticalAlignment="Center" Text="Последнее событие : "/>
            <TextBlock x:Name="LatestGameStateTextBlock" VerticalAlignment="Center" Text="[Game] [type] state"/>
        </StatusBar>
        <TextBlock HorizontalAlignment="Right" VerticalAlignment="Bottom" Text="Developed by nintend01337"
               Margin="0,0,9,7" Grid.Row="2"/>
    </Grid>
    <Controls:MetroWindow.RightWindowCommands>
        <Controls:WindowCommands>
            <StackPanel Orientation="Horizontal">
                <Image Source="Media/icon_reboot.png"/>
                <Button Click="RestartLauncherButton_Click" Content="Restart"/>
                <TextBlock Text="         "/>
                <Image Source="Media/discord_logo_white.PNG"/>
                <Button Click="OfficialDiscordButton_Click" Content="Discord"/>
            </StackPanel>
        </Controls:WindowCommands>
    </Controls:MetroWindow.RightWindowCommands>
</Controls:MetroWindow>