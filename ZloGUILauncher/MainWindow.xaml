<Controls:MetroWindow
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:views="clr-namespace:ZloGUILauncher.Views"
                      xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
                      xmlns:helpers="clr-namespace:ZloGUILauncher"
                      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Class="ZloGUILauncher.MainWindow"
                      Height="600" Width="1000" ResizeMode="CanMinimize" ShowSystemMenuOnRightClick="false"
                      GlowBrush="{DynamicResource AccentColorBrush}" ShowTitleBar="True" ShowIconOnTitleBar="true" Icon="icon.ico"
                      Loaded="MetroWindow_Loaded"
                      Activated="MetroWindow_Activated"
                      Deactivated="MetroWindow_Deactivated"
                      WindowStartupLocation="CenterScreen" Foreground="Black">

    <Controls:MetroWindow.Resources>
        <Color x:Key="TabSelectColor">#CC2C2C2C</Color>
        <SolidColorBrush x:Key="TabSelectColorBrush" Color="{StaticResource TabSelectColor}" Opacity="0.8" />


        <Style TargetType="{x:Type ScrollViewer}">
            <!--<Style.Setters>
                <Setter Property="helpers:ScrollViewerCorrector.FixScrolling" Value="true"/>
            </Style.Setters> Вот изза этой хуйни вылетал лог-->    
            
        </Style>
        <Style TargetType="{x:Type Button}" BasedOn="{StaticResource MetroButton}">
            <Setter Property="Background" Value="LightGray"/>
            <Setter Property="Foreground" Value="Black"/>
        </Style>
    </Controls:MetroWindow.Resources>
    <Controls:MetroWindow.Background>
        <ImageBrush ImageSource="{StaticResource background}" Stretch="UniformToFill"/>
    </Controls:MetroWindow.Background>

    <Controls:MetroWindow.RightWindowCommands>
        <Controls:WindowCommands>
            <StackPanel Orientation="Horizontal">
                <Button Click="RestartLauncherButton_Click">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="Media/restart.ico" Stretch="Uniform" VerticalAlignment="Center"/>
                        <TextBlock VerticalAlignment="Center" FontWeight="Bold"><Run Text="Restart"/></TextBlock>
                    </StackPanel>
                </Button>
                <TextBlock Text="    "/>
                <Button Click="OfficialDiscordButton_Click">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="Media/discord.ico" Stretch="Uniform" VerticalAlignment="Center"/>
                        <TextBlock VerticalAlignment="Center" FontWeight="Bold"><Run Text="Discord"/></TextBlock>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Controls:WindowCommands>
    </Controls:MetroWindow.RightWindowCommands>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="109*"/>
            <ColumnDefinition Width="885*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Rectangle Fill="{DynamicResource AccentColorBrush}" HorizontalAlignment="Left" Height="548.04" VerticalAlignment="Top" Width="109" Grid.RowSpan="2"/>
        <Controls:MetroAnimatedTabControl 
            SelectionChanged="MainTabControl_SelectionChanged"
            x:Name="MainTabControl" Grid.Row="1" TabStripPlacement="Left"
            Controls:TabControlHelper.IsUnderlined="true"
            Background="{x:Null}" Grid.ColumnSpan="2">

            <Controls:MetroAnimatedTabControl.Resources>
                <Style TargetType="{x:Type TabItem}">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type TabItem}">
                                <Grid x:Name="Panel">
                                    <ContentPresenter x:Name="ContentSite"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Center"
                                        ContentSource="Header"
                                        Margin="10,2"/>
                                </Grid>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Panel" Property="Background" Value="{DynamicResource TabSelectColorBrush}" />
                                    </Trigger>
                                    <Trigger Property="IsSelected" Value="False">
                                        <Setter TargetName="Panel" Property="Background" Value="{DynamicResource ResourceKey}" />
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </Controls:MetroAnimatedTabControl.Resources>

            <TabItem Grid.Column="0" Height="140" Margin="0,0,11,0" >
                <TabItem.Header>
                    <StackPanel Width="110"  MinWidth="80" MinHeight="90" Height="139" Margin="-10,0,0,0" HorizontalAlignment="Center">
                        <StackPanel.Background>
                            <ImageBrush ImageSource="Media/bf3.ico" TileMode="Tile" Stretch="Uniform"/>
                        </StackPanel.Background>
                    </StackPanel>
                </TabItem.Header>
                <Grid Margin="-11,0,0,0">
                    <views:BF3View x:Name="Ibf3View1" />
                </Grid>
            </TabItem>
            <TabItem Grid.Column="0" Height="140" Margin="0,0,11,0">
                <TabItem.Header>
                    <StackPanel Width="110"  MinWidth="80" MinHeight="90" Height="139" Margin="-10,0,0,0" HorizontalAlignment="Center">
                        <StackPanel.Background>
                            <ImageBrush ImageSource="Media/bf4.ico" TileMode="Tile" Stretch="Uniform"/>
                        </StackPanel.Background>
                    </StackPanel>
                </TabItem.Header>
                <Grid Margin="-11,0,0,0">
                    <views:BF4View x:Name="Ibf4View"/>
                </Grid>
            </TabItem>
            <TabItem Grid.Column="0" Height="140" Margin="0,0,11,0">
                <TabItem.Header>
                    <StackPanel Width="110"  MinWidth="80" MinHeight="90" Height="139" Margin="-10,0,0,0" HorizontalAlignment="Center">
                        <StackPanel.Background>
                            <ImageBrush ImageSource="Media/bfh.ico" TileMode="Tile" Stretch="Uniform"/>
                        </StackPanel.Background>
                    </StackPanel>
                </TabItem.Header>
                <Grid Margin="-11,0,0,0">
                    <views:BFHView x:Name="IbfhView"/>
                </Grid>
            </TabItem>
            <TabItem Margin="0,104,11,-113" HorizontalAlignment="Right" Width="56">
                <TabItem.Header>
                    <StackPanel HorizontalAlignment="Center" Height="28" RenderTransformOrigin="0.5,0.5" Width="55" Margin="0,-8">
                        <StackPanel.Background>
                            <ImageBrush ImageSource="Media/settings.ico" Stretch="Uniform">
                                <ImageBrush.RelativeTransform>
                                    <TransformGroup>
                                        <ScaleTransform CenterY="0.5" CenterX="0.5" ScaleY="0.75" ScaleX="0.75"/>
                                        <SkewTransform CenterY="0.5" CenterX="0.5"/>
                                        <RotateTransform CenterY="0.5" CenterX="0.5"/>
                                        <TranslateTransform/>
                                    </TransformGroup>
                                </ImageBrush.RelativeTransform>
                            </ImageBrush>
                        </StackPanel.Background>
                    </StackPanel>
                </TabItem.Header>
                <Grid Margin="-10,0,0,0">
                    <views:Options/>
                </Grid>
            </TabItem>
            <TabItem Header="LOG" Margin="0,84.08,67,-93.08" HorizontalAlignment="Right" Width="53" FontWeight="Bold" FontFamily="Verdana">
                <Grid Margin="-11,0,0,0">
                    <Button Click="ClearButton_Click" Content="Очистить" Margin="0,523.74,-2,-0.04"/>
                    <RichTextBox x:Name="LogBox" VerticalScrollBarVisibility="Visible" BorderThickness="0" Background="#FF0D0D0D"
                       IsReadOnly="true" Margin="0,0,-2,25.26" BorderBrush="White">
                        <RichTextBox.Resources>
                            <Style TargetType="{x:Type Paragraph}">
                                <Setter Property="Block.Margin" Value="0"/>
                            </Style>
                        </RichTextBox.Resources>
                        <FlowDocument x:Name="LogDocument"/>
                    </RichTextBox>
                </Grid>
            </TabItem>
        </Controls:MetroAnimatedTabControl>

        <StatusBar x:Name="StatusBar" Grid.Row="2" Grid.ColumnSpan="2">
            <TextBlock VerticalAlignment="Center" Text="Последнее событие : "/>
            <TextBlock x:Name="LatestGameStateTextBlock" VerticalAlignment="Center" Text="[Game] [type] state"/>
        </StatusBar>
        <TextBlock HorizontalAlignment="Right" VerticalAlignment="Bottom" Text="Developed by nintend01337 | Design by ResupinePuma"
               Margin="0,0,0,3" Grid.Row="2" Foreground="White" Grid.Column="1" Height="15.96" Width="296.85" IsEnabled="False"/>
        <Grid x:Name="Banner" Height="548.04" Grid.RowSpan="2" Background="#CA000000" Margin="0,0.5" Grid.Column="1" Visibility="Hidden">
            <Label Content="ИГРА УЖЕ ЗАПУЩЕНА" Margin="0,151,0,316.04" Width="551" FontSize="48" FontWeight="Bold" HorizontalContentAlignment="Center" Foreground="White"/>
            <Label Content="Закройте игру прежде чем продолджить" Margin="0,232,0,276.04" Width="551" FontSize="20" FontWeight="Bold" HorizontalContentAlignment="Center" Foreground="White"/>
            <Button x:Name="CloseGameBtn" Content="ЗАКРЫТЬ" HorizontalAlignment="Center" Height="56" Margin="318,326,318,0" VerticalAlignment="Top" Width="249" Controls:ControlsHelper.ContentCharacterCasing="Upper" FontSize="22" Background="{x:Null}" BorderBrush="{DynamicResource AccentColorBrush}" Foreground="{DynamicResource AccentColorBrush}" Click="CloseGameBtn_Click"/>
        </Grid>
    </Grid>
</Controls:MetroWindow>